script(type="text/x-template")#skills-list
    ul.skill-groups
        li.skill__groups-item(v-for="category in skills" :key="category.title")
            skills-row(
                :category="category"
            )

script(type="text/x-template")#skills-row
    .skills-row
        h3.skills-row__title {{category.title}}
        ul.skills-row__list
            li.skills-row__item(v-for="skill in category.skills" :key="skill.id")
                skill(
                    :skill="skill"
                )

script(type="text/x-template")#skill
    .skill
        svg(viewBox="0 0 100 100").skill__shape
            circle(cx="50" cy="50" r="40").skill__circle.skill__circle--position--under
            circle(cx="50" cy="50" r="40" ref="circle").skill__circle.skill__circle--position--above
            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
                stop(offset="0%" stop-color="#5500f2")
                stop(offset="100%" stop-color="#8f00ef")
        .skill__title {{skill.title}}