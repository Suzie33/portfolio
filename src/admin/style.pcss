.container {
    max-width: 1080px;
}

.header {
    padding-top: 15px;
    padding-bottom: 20px;
    background-color: $admin-footer;
    color: #fff;
}

.header__container {
    display: flex;
    align-items: center;
}

.header__left {
    display: flex;
    align-items: center;
    margin-right: auto;
}

.header__avatar {
    width: 45px;
    height: 45px;
    margin-right: 20px;
}

.avatar {
    border-radius: 50%;
    overflow: hidden;
}

.avatar__pic {
    width: 100%;
    object-fit: cover;
    object-position: top;
}

.header__name {
    font-size: 18px;
    margin-right: 28px;
}

.header__note {
    font-size: 14px;
    font-weight: 400;
    opacity: .5;
}

.link {
    font-weight: 400;
    text-decoration: underline;
    opacity: .7;
}

.nav {
    background-color: #fff;
}

.nav__list {
    display: flex;
    align-items: center;
}

.nav__item {
    padding: 25px 30px;
    border-bottom: 3px solid transparent;

    &:hover {
        cursor: pointer;
        border-bottom: 3px solid $admin-blue;

        .nav__link {
            color: $admin-blue;
        }
    }
}

.nav__link {
    color: $admin-color;
}

.main {
    padding-bottom: 25px;
    background: #fcfcfe url('../images/MountainBaloon_white.jpg') no-repeat 50% 50%;
    background-size: cover;
}

.about {
    padding-top: 50px;
}

.about__top {
    display: flex;
    align-items: center;
    margin-bottom: 50px;
}

.section__title {
    font-size: 21px;
    color: #414c63;
    font-weight: 700;
    margin-right: 60px;
}

.button-inscription {
    display: flex;
    padding: 0;
    color: $admin-blue;
    background-color: transparent;
    cursor: pointer;

    &:hover {
        opacity: .7;
    }
}

.button-inscription__icon {
    width: 20px;
    height: 20px;
    margin-right: 15px;
}

.plus-icon {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-image: linear-gradient(90deg, #0069ec 0%, #3f34cb 100%);
    position: relative;

    &::before{
        content: "";
        display: block;
        width: 8px;
        height: 2px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
    }

    &::after{
        content: "";
        display: block;
        width: 2px;
        height: 8px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
    }
}

.button-inscription__text {
    color: inherit;
}

.main-list {
    display: flex;
    flex-wrap: wrap;
}

.main-list__item {
    margin-right: 30px;
    margin-bottom: 30px;
    background-color: #fff;
    box-shadow: 4.096px 2.868px 10px rgba(0,0,0,0.07);
}

.about__item {
    padding: 25px 30px 35px;
    width: calc(100% / 2 - 15px);
    min-height: 390px;

    &:nth-of-type(2) {
        margin-right: 0;
    }
}

.form__input {
    padding-bottom: 10px;
    padding-top: 10px;
    border: none;
    border-bottom: 1px solid #000;

    &--width--50 {
        width: 50%;
    }

    &::-webkit-input-placeholder {
        font-size: 18px;
        color: #414c63;
        opacity: .3;
    }

    
}

.about__form-top {
    padding-bottom: 15px;
    border-bottom: 1px solid rgba(170,170,174,0.15);
    display: flex;
    align-items: center;
}

