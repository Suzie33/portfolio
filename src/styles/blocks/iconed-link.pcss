.iconed-link {
    color: $links-color;

    &:hover {
        text-decoration: underline;
    }
}

.iconed-link__icon  {
    display: inline-block;
    width: 15px;
    height: 15px;
    margin-right: 20px;
    background: svg-load('link.svg', fill=$links-color, width=100%, height=100%);
    background-size: cover;
}

.iconed-link__text {
    font-size: 18px;
    font-weight: 700;

    @include tablets {
        font-size: 1rem;
    }
}