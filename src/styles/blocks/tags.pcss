.tags__item {
    display: inline-block;
    padding: 10px 20px;
    margin-right: 15px;
    border-radius: 22px;
    font-size: 15px;
    background-color: #f3f5f9;

    &:last-child {
        margin-right: 0;
    }

    @include phones {
        padding: 8px 15px;
        margin-right: 10px;
        margin-bottom: 5px;
    }
}