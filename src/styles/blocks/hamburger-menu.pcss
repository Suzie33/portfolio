.hamburger-menu {
    display: none;
    z-index: 20;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;

    flex-direction: column;
    justify-content: center;

    width: 320px;
    height: 100vh;
    padding-left: 65px;
    padding-right: 65px;
    
    background-color: #fff;
    color: #414c63;

    & .nav__list {
        width: 215px;
        margin-bottom: 45px;
        flex-direction: column;
        align-items: flex-start;
    }

    & .nav__item {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 20px;

        &:last-child {
            margin-bottom: 0;
        }
    }

    @include tablets {
        display: flex;
    }
}